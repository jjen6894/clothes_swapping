<div class="container">
  <p id="notice"><%= notice %></p>
  <% if @request_user.items.any? %>
    <div class="col-lg-12">
      <h1 class="page-header">Select items back</h1>
    </div>

    <div class="row">
      <div class="container">
        <% @request_user.items.each do |item| %>
          <div class="col-lg-6 thumb">
            <div class="panel panel-default">
              <div class="panel-body">
                <a href="/items/<%=item.id%>">
                  <%= image_tag(item.image.url(:square), :alt => item.description, :class => "img-responsive") %>
                </a>
              </div>
              <div class="panel-footer">
                <h3 class="panel-title"><%= link_to "Request back", request_back_path(item_id: item.id, user_id: current_user.id, requester_id: @requester.id) %></h3>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    No items for swapping
  <% end %>
</div>
