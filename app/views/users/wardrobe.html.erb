<% if current_user.items.any? %>
<div class="container">
<div class="col-lg-12">
  <h1 class="page-header">Your Wardrobe</h1>
</div>
<% current_user.items.each do |item| %>
<div class="row">
  <div class="container">
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <a href="/items/<%=item.id%>" class='thumbnail'>
        <%= image_tag(item.image.url(:square), :alt => item.description, :class => "img-responsive") %>
      </a>
    </div>
    <% end %>
  </div>
</div>
</div>
<% else %>
No items yet
<% end %>
