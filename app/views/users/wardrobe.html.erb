<% if @user_items.any? %>
<div class="container">
<div class="col-lg-12">
  <h1 class="page-header">Your Wardrobe</h1>
</div>
<% @user_items.each do |item| %>
<div class="row">
  <div class="container">
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <a href="/items/<%=item.id%>" class='thumbnail'>
        <%= image_tag(item.image.url(:square), :alt => item.description, :class => "img-responsive") %>
      </a>
    </div>
    <% end %>
  </div>
</div>
</div>
<% else %>
  <div class="row">
    <h1>You have not added any clothes yet!</h1>
  </div>
  <div class="row">
    <%= link_to "Add clothes", new_item_path %>
  <div>
<% end %>
