<div class="container">
  <p id="notice"><%= notice %></p>
  <% if @items.any? %>
    <div class="col-lg-12">
      <h1 class="page-header">Swap Till You Drop</h1>
    </div>

    <div class="row">
      <div class="container">
          <% @items.each do |item| %>
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
          <a href="/items/<%=item.id%>" class='thumbnail'>
            <%= image_tag(item.image.url(:square), :alt => item.description, :class => "img-responsive") %>
          </a>
        </div>
        <% end %>
      </div>
    </div>
  <% else %>
    No items yet
  <% end %>
</div>
