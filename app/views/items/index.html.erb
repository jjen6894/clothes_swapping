<p id="notice"><%= notice %></p>



    <% if @items.any? %>
    <div class="col-lg-12">
        <h1 class="page-header">Items Gallery</h1>
    </div>
      <% @items.each do |item| %>
      <div class="row">
      <div class="container">
              <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                  <a class="thumbnail" href="#">
                      <%= image_tag item.image.url(:medium) %>
                  </a>
                  <%= item.size %>
                  <%= item.color %>
                  <%= item.category %>
                  <%= item.description %>
                  <%= link_to 'Show', item %>
              </div>
      <% end %>
      </div>
      </div>
    <% else %>
      No items yet
    <% end %>
