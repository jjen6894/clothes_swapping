<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Size</th>
      <th>Color</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @items.any? %>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag item.image.url(:medium) %><td>
          <td><%= item.size %></td>
          <td><%= item.color %></td>
          <td><%= item.category %></td>
          <td><%= item.description %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      No items yet
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'Add an item', new_item_path %>
<% end %>
